.card-widget.card-aplayer
  .card-content
    .item-headline
      i.fa.fa-music(aria-hidden="true")
      span= _p('Music')
      html
      body
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/gh/GamerNoTitle/Picture-repo-v1@master/css/APlayer.min.css")
        #aplayer
        script(src="https://cdn.jsdelivr.net/gh/GamerNoTitle/Picture-repo-v1@master/js/APlayer.min.js")
        script.
          const ap = new APlayer({
          container: document.getElementById('aplayer'),
          audio: [{
          name: 'world.execute (me) ;',
          artist: 'Mili',
          url: 'https://cdn.jsdelivr.net/gh/GamerNoTitle/Picture-repo-v1@world.execute(me)/audio/Mili%20-%20world.execute%20(me)%20;.mp3',
          cover: 'https://cdn.jsdelivr.net/gh/GamerNoTitle/Picture-repo-v1@world.execute(me)/img/Album/Miracle Milk.jpg',
          theme: "#8e8cd8",
          lrc: "https://cdn.jsdelivr.net/gh/GamerNoTitle/Picture-repo-v1@Github-Basic/lrc/world.execute (me) %3B.txt"
          }]
          });
      //-   说明：
      //-   css经过修改，不建议引用官方CSS，会有点丑
      //-   css把循环按钮和进度条去掉了，避免在侧边栏的时候进度条只有一丁点导致的效果并不好
      //-   在上面修改参数即可
      //-   name是歌曲名，artist是歌手名
      //-   url改成一个可以放出音乐的链接即可，cover是封面图
      //-   theme是颜色，可以删掉，也可以自己改，用Hex颜色代码
      //-   lrc是歌词，貌似不支持txt格式的lrc标准歌词内容……
